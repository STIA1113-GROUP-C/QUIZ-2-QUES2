package quiz2;
import java.util.Scanner;
public class printArrayInStars {

	public static void main(String[] args) {
		// TODO Auto-generated method stub	
		Scanner scan = new Scanner(System.in);
		System.out.print("Enter the number of items: ");
        int NUM_ITEMS = scan.nextInt();
        
        int []numValue = new int[NUM_ITEMS];
        System.out.print("Enter the value of all items (separated by space):");
        for(int m = 0; m < NUM_ITEMS; m++)
        {numValue[m] = scan.nextInt();
        }
       
        for (int n = 0; n < numValue.length; n++) {
            int number = numValue[n];

            for (int star = 1; star <= number; star++) {
                System.out.print("*");
            }
            System.out.print("(" + numValue[n] + ")");
           System.out.println("");
    }
	}

}
